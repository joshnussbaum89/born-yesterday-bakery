---
import { getImage } from 'astro:assets'
import PageHeader from '../text/PageHeader.astro'

export interface Props {
  title: string
  description?: string
  image: ImageMetadata
}

const { title, description, image } = Astro.props

// Generate image formats for best browser support
const { src: backgroundImageAvif } = await getImage({ src: image, format: 'avif' })
const { src: backgroundImageWebp } = await getImage({ src: image, format: 'webp' })
const { src: backgroundImagePng } = await getImage({ src: image, format: 'png' })
---

<div
  class="banner"
  style={`background-image: url(${backgroundImageAvif}), url(${backgroundImageWebp}), url(${backgroundImagePng});`}
>
  <div class="scrim"></div>
  <PageHeader title={title} />
  {description && <p>{description}</p>}
</div>

<style>
  .scrim {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: var(--color-black);
    opacity: 0.4;
  }

  .banner {
    position: relative;
    height: 50vh;
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background-color: var(--color-secondary);
    color: var(--color-white);
  }

  @media only screen and (max-device-width: 1366px) {
    .banner {
      background-attachment: scroll;
    }
  }

  .banner p {
    max-width: 500px;
    z-index: 1;
    padding: 0 1rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .banner p {
      font-size: var(--size-base);
    }
  }
</style>
