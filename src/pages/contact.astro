---
import { Image, getImage } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import HeroBanner from '../components/layout/HeroBanner.astro'
import SectionHeader from '../components/text/SectionHeader.astro'
import MainContent from '../components/layout/MainContent.astro'
import heroImage from '../assets/hero-contact.jpg'

const image = await getImage({ src: heroImage })
---

<Layout
  title="Born Yesterday Bakery | Contact"
  description="Born Yesterday Bakery is a bakery located in Maine, specializing in sourdough bread"
>
  <HeroBanner title="Contact Us" url={image.src} />
  <MainContent>
    <section id="contact" class="contact">
      <SectionHeader title="Let's Chat" />
      <div class="contact-container">
        <Image
          src={heroImage}
          alt="Vanilla/sumac kouign-Amann filled with homemade labneh topped with an herb olive oil"
          width={heroImage.width}
          height={heroImage.height}
        />
        <form method="POST" class="form" name="contactForm" action="/success" data-netlify="true">
          <label for="name">Name: <span>*</span></label>
          <input id="name" type="text" name="name" placeholder="Name" required />
          <label for="email">Email: <span>*</span></label>
          <input id="email" type="email" name="email" placeholder="Email" required />
          <label for="message">Message: <span>*</span></label>
          <textarea id="message" name="message" cols="30" rows="5" placeholder="message" required
          ></textarea>
          <button class="site-cta" type="submit">Send Message</button>
        </form>
      </div>
    </section>
  </MainContent>
</Layout>

<style>
  .contact-container {
    width: 100%;
    max-width: 1080px;
    margin: auto;
    padding: 2rem 0;
    display: grid;
    grid-template-columns: 1fr;
    justify-content: center;
    align-items: center;
    gap: 4rem;
  }

  @media (min-width: 768px) {
    .contact-container {
      grid-template-columns: 1fr 1fr;
    }
  }

  .contact-container > p {
    display: block;
    max-width: 420px;
    margin: 0 auto 2rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .contact-container > p {
      max-width: 500px;
    }
  }

  .contact-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 0.25rem;
  }

  .form {
    display: flex;
    flex-direction: column;
  }

  .form label,
  .form input,
  .form textarea {
    font-size: var(--size-sm);
  }

  .form label,
  .form input,
  .form textarea {
    border-radius: 5px;
  }

  .form input,
  .form textarea {
    margin-bottom: 1rem;
    padding: 0.5rem;
    border: 2px solid var(--color-black);
    transition: var(--transition-normal);
  }

  .form label {
    margin-bottom: 0.25rem;
  }

  .form label span {
    color: var(--color-primary);
  }

  .form textarea {
    margin-bottom: 2rem;
  }

  .form button {
    margin: 0 auto;
    font-size: var(--size-sm);
  }

  @media (min-width: 768px) {
    .form button {
      font-size: var(--size-base);
    }
  }

  .form input:focus,
  .form textarea:focus {
    outline: 0;
    appearance: none;
    -webkit-appearance: none;
    -webkit-box-shadow: 0 0 0 2px var(--color-primary);
    box-shadow: 0 0 0 2px var(--color-primary);
  }

  .form input::placeholder,
  .form textarea::placeholder {
    color: var(--color-grey);
  }
</style>
