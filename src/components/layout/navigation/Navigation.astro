---
import MobileLogo from '../logo/MobileLogo.astro'
import Desktop from './Desktop.astro'
import Mobile from './Mobile.astro'
---

<nav>
  <MobileLogo />
  <Mobile />
  <Desktop />
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;

    /* Padding matches original .png logo styling */
    padding: 0.25rem 1rem 0.25rem 0.6rem;
    background-color: var(--color-secondary);
  }

  @media (min-width: 768px) {
    nav {
      display: block;
      padding: 0.75rem 1.5rem 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    nav {
      padding: 0.5rem 2rem;
    }
  }
</style>
