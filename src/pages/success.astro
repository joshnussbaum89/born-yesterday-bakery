---
import { getImage } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import HeroBanner from '../components/layout/HeroBanner.astro'
import SectionHeader from '../components/text/SectionHeader.astro'
import breadSunflower from '../assets/bread-sunflower.jpeg'

const breadSunflowerImage = await getImage({ src: breadSunflower })
---

<Layout
  title="Born Yesterday Bakery | Success"
  description="Born Yesterday Bakery is a bakery located in Maine, specializing in sourdough bread"
>
  <HeroBanner title="Success" url={breadSunflowerImage.src} />
  <main>
    <section id="success">
      <SectionHeader title="Thank you for your message" class="section-header" />
      <p>We will get back to you as soon as we can!</p>
    </section>
  </main>
</Layout>
