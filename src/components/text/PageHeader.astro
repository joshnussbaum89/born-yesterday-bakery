---
export interface Props {
  title: string
  class?: string
}

const { title, class: className } = Astro.props
---

<h1 class={className}>{title}</h1>

<style>
  h1 {
    z-index: 1;
    padding: 0 1rem;
    font-size: clamp(var(--size-lg), 7vw, var(--size-xxl));
    text-align: center;
  }
</style>
